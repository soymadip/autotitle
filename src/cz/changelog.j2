{% for release in tree -%}
    {%- if release.version -%}
        ## {{ release.version }} ({{ release.date }}){{ "\n" }}
    {%- endif -%}

    {%- for group, commits in release.changes.items() -%}
        {{ "\n" }}### {{ group }}{{ "\n\n" }}
        {%- for commit in commits -%}
            {%- set message = commit.message | trim -%}
            - {% if commit.scope %}**{{ commit.scope }}**: {% endif %}{{ message[:1] | upper }}{{ message[1:] }}{{ "\n" }}
        {%- endfor -%}
    {%- endfor -%}
    {{ "\n\n" }}
{%- endfor %}
